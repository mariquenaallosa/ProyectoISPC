<!-- user.html -->
<div class="user">
  <h2 class="user__name"></h2>
  <p class="user__email"></p>
  <p class="user__phone"></p>
</div>

<style>
  .user {
    border: 1px solid #ccc;
    padding: 10px;
    margin-bottom: 10px;
  }

  .user__name {
    font-size: 18px;
    font-weight: bold;
    margin: 0;
  }

  .user__email,
  .user__phone {
    margin: 0;
  }
</style>

<script src="user.js"></script>

function renderUser(name, email, phone) {
  const userEl = document.createElement("div");
  userEl.classList.add("user");

  const nameEl = document.createElement("h2");
  nameEl.classList.add("user__name");
  nameEl.textContent = name;

  const emailEl = document.createElement("p");
  emailEl.classList.add("user__email");
  emailEl.textContent = email;

  const phoneEl = document.createElement("p");
  phoneEl.classList.add("user__phone");
  phoneEl.textContent = phone;

  userEl.appendChild(nameEl);
  userEl.appendChild(emailEl);
  userEl.appendChild(phoneEl);

  const containerEl = document.querySelector(".container");
  containerEl.appendChild(userEl);
}

// index.js
renderUser("John Doe", "john.doe@example.com", "555-1234");
