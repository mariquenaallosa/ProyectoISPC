})
export class AppModule { }

import { Component } from '@angular/core';

@Component({
  selector: 'app-root',
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css']
})
export class AppComponent {
  handleBuscar(filtro: string): void {
    // Lógica de búsqueda
  }
}

<app-filtro-de-busqueda (buscar)="handleBuscar($event)"></app-filtro-de-busqueda>

